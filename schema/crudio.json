            "type": [
                "array"
            ],
            "items": [
                {
                    "type": "string"
                }
            ]
        },
        "entities": {
            "type": "object"
        },
        "generators": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "values": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "values"
                ]
            }
        },
        "triggers": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "entity": {
                        "type": "string"
                    },
                    "scripts": {
                        "type": [
                            "array"
                        ],
                        "items": [
                            {
                                "type": "string"
                            }
                        ]
                    }
                },
                "required": [
                    "entity",
                    "scripts"
                ]
