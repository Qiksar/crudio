#!/usr/bin/env node

const {execSync} = require('child_process');
const runCommand =  command => {
    try{
        execSync (`${command}`, {stdio: 'inherit'});
    }
    catch (e) {
        console.error(`Failed to execute ${command}`, e);
        return false;
    }

    return true;
};

const repoName = process.argv[1];
console.log(`Create new project: ${repoName}`)

const gitCheckoutCommand = `git clone --depth 1 https://github.com:/qiksar/crudio ${repoName}`;
const checkedOut = runCommand(gitCheckoutCommand);

const installDeps = `cd ${repoName} && npm install`;

if(!checkedOut) process.exit(-1);

console.log(`Installing dependencies...`);
const installedDeps = runCommand(installedDeps);

if(!installedDeps) process.exit(-1);

console.log(`cd ${repoName} && npm run`);